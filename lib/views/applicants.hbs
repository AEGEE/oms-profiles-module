

     <div class="bs-docs-header" id="content">
        <div class="container" >  
    <h1>List of applicants to the body: {{bodyCode}}</h1>
        <p> </p>
    <hr>
        
</div>
      </div>
    
<div class="container"> 
  
 
<form action="/applications/processmembership"  method="post" class="form-inline">
<table class="table table-hover">
  <tr>
    <th>Name</th>
    <th>uid</th>
    <th>Application date</th>
    <!--<th>Gender</th>-->
    <th>Mail</th>
    <th>Actions</th>
  </tr>

{{#each applicant}}
      <tr>
        <td>{{cn}}</td>
        <td> <a href="/user/{{uid}}">{{uid}}</a> </td> <!--or maybe using <a href> directly on the name?-->
        <td>{{memberSinceDate}}</td>
        <td>{{mail}}</td>

        <td>    
          <div class="form-group">
            <!-- as of now the hidden fields are useless - the uid and member are coded inline of the memberType-->
            <input type="hidden" name="uid" value={{uid}}  class="form-control"></input>
            <input type="hidden" name="bodyCode" value={{bodyCode}}  class="form-control"></input>

            <div class="radio-inline has-success">
            <label>
                <input type="radio" name="memberType-{{uid}}-{{bodyCode}}" value="Member">Accept</input>
            </label>
            </div>

            <div class="radio-inline has-error">
            <label>
                <input type="radio" name="memberType-{{uid}}-{{bodyCode}}" value="Rejected">Reject</input>
            </label>
            </div>

            <div class="radio-inline has-warning">
            <label>
                <input type="radio" name="memberType-{{uid}}-{{bodyCode}}" value="Applicant" checked>Decide later</input>
            </label>
            </div>
            
          </div>
                
        </td>


      </tr>
  
 {{/each}} 

      </tr> 
    </br>
</table>  

<button type="submit" onClick="window.location.reload()" class="btn btn-info">submit</button>
 </form> 

